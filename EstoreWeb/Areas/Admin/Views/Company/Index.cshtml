@model List<CompanyModel>

<div class="container">
    <div class="row pt-4 mb-5">
        <div class="col-6">
            <h2 class="text-primary">
                Company List
            </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create New Company
            </a>
        </div>
    </div>
    <table id="companyTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>StreetAddress</th>
                <th>City</th>
                <th>State</th>
                <th>Postal Code</th>
                <th>Phone Number</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var company in Model.OrderBy(c => c.Id))
            {
                <tr>
                    <td>@company.Name</td>
                    <td>@company.StreetAddress</td>
                    <td>@company.City</td>
                    <td>@company.State</td>
                    <td>@company.PostalCode</td>
                    <td>@company.PhoneNumber</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        <script src="~/js/company.js"></script>
    }
}