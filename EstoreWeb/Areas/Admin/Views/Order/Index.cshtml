@{
    var status = Context.Request.Query["status"];
    var all = "text-primary";
    var pending = "text-primary";
    var approved = "text-primary";
    var inprocess = "text-primary";
    var completed = "text-primary";

    switch (status)
    {
        case "pending":
            pending = "active text-white bg-primary";
            break;
        case "approved":
            approved = "active text-white bg-primary";
            break;
        case "inprocess":
            inprocess = "active text-white bg-primary";
            break;
        case "completed":
            completed = "active text-white bg-primary";
            break;
        default:
            all = "text-white bg-primary";
            break;
    }
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">
                    Order List
                </h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="d-flex justify-content-between pb-5 pt-2">
            <span></span>
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none; max-width:100%; max-height:100%" asp-controller=Order" asp-action="Index" asp-route-status="all">
                    <li class="list-group-item border-1 @all">
                        All
                    </li>
                </a>
                <a style="text-decoration:none" asp-controller=Order" asp-action="Index" asp-route-status="pending">
                    <li class="list-group-item border-1 @pending">
                        Pending
                    </li>
                </a>
                <a style="text-decoration:none" asp-controller=Order" asp-action="Index" asp-route-status="approved">
                    <li class="list-group-item border-1 @approved">
                        Approved
                    </li>
                </a>
                <a style="text-decoration:none" asp-controller=Order" asp-action="Index" asp-route-status="inprocess">
                     <li class="list-group-item border-1 @inprocess">
                         In Process   
                    </li>
                </a>
                <a style="text-decoration:none" asp-controller=Order" asp-action="Index" asp-route-status="completed">
                    <li class="list-group-item border-1 @completed">
                        Completed
                    </li>
                </a>
            </ul>
        </div>
        <table id="myTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div> 
</div>

@section Scripts {
    @{
        <script src="~/js/order.js"></script>
    }
}